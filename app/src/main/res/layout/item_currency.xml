<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewCurrency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        card_view:background="@color/teal_700"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="6dp"
        card_view:contentPadding="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivCurrency"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingBottom="8dp"
                tools:src="@drawable/bitcoin_btc_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            </androidx.appcompat.widget.AppCompatImageView>

            <TextView
                android:id="@+id/tvNameCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/NameText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivCurrency"
                tools:text="Bitcoin" />
            <TextView
                android:id="@+id/tvSlugCurrency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvNameCurrency"
                tools:text="Bitcoin" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toBottomOf="@id/tvSlugCurrency">

                <TextView
                    android:id="@+id/tvInfoMinimumPrice"
                    style="@style/InfoText"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/minimum_price"
                    app:layout_constraintEnd_toStartOf="@id/tvInfoMaximumPrice"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Precio mínimo de pedido" />

                <TextView
                    android:id="@+id/tvInfoMaximumPrice"
                    style="@style/InfoText"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="@string/maximum_price"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvInfoMinimumPrice"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Precio máximo de pedido" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                app:layout_constraintTop_toBottomOf="@id/clInfo">

                <TextView
                    android:id="@+id/tvMinimumPrice"
                    style="@style/PriceText"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toStartOf="@id/tvMaximumPrice"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="$20,000.00" />

                <TextView
                    android:id="@+id/tvMaximumPrice"
                    style="@style/PriceText"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvMinimumPrice"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="7,000,000.00" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>